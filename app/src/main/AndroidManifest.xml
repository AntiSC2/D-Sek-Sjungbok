<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sjung.sjungbok"
    android:versionCode="6"
    android:versionName="1.4">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sjung.sjungbok.MainActivity"
            android:label="Sjungbok" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sjung.sjungbok.SongPane"
            android:label="@string/title_activity_song_pane"
            android:parentActivityName="com.sjung.sjungbok.MainActivity" >
        </activity>
        <activity
            android:name="com.sjung.sjungbok.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.sjung.sjungbok.CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
    </application>

</manifest>
